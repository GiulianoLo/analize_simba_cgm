   "source": [
    "def findsatellites(pos_c, pos_l, ids, h, r=30):\n",
    "    pos_c = pos_c*h\n",
    "    pos_l = pos_l*h\n",
    "    dist = np.sqrt((pos_l[:,0]-pos_c[0])**2+(pos_l[:,1]-pos_c[1])**2+(pos_l[:,2]-pos_c[2])**2)\n",
    "    return ids[np.where(dist<r)[0]]"
   ]
